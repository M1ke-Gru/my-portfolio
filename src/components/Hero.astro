---
import "../styles/global.css"
import {Github, Linkedin, Mail} from "lucide-vue-next"
---

<div class="rounded-2xl p-8 bg-white/10 border border-white/20 shadow-lg my-8 md:mx-auto mx-8 max-w-6xl" style="backdrop-filter: blur(8px);">
  <div class="flex flex-col md:flex-row items-center md:items-start text-center md:text-left justify-center md:justify-start gap-12">
    <img src="../../public/me.jpg" class="w-80 h-80 rounded-full" style="object-fit: cover; object-position: center;" alt="My photo"/>
    <div class="my-auto">
      <h1 class="mb-4 md:mb-2 text-5xl">Mike Grushko</h1>
      <h2 class="mb-8 text-2xl">Developer | Student Angewandte Informatik RUB</h2>
      <div class="flex gap-2 p-auto flex-col md:flex-row">
        <button class="main-btn md:mr-4 md:ml-0 mx-auto">Download CV</button>
        <div class="flex m-auto md:m-0">
          <div class="flex justify-center aspect-square w-16 rounded-full p-1 transition-all duration-300 hover:bg-white/20">
            <Github class="icon-btn" client:load />
          </div>
          <div class="flex justify-center aspect-square w-16 rounded-full p-1 transition-all duration-300 hover:bg-white/20">
            <Linkedin class="icon-btn" client:load />
          </div>
          <div class="flex justify-center rounded-full w-16 p-1 aspect-square transition-all duration-300 hover:bg-white/20">
            <Mail class="icon-btn" client:load />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
